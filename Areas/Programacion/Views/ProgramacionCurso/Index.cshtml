@model ProgramacionCurso

<div class="intro-y col-span-12">
    <div class="intro-y box">
        <div id='loading'>loading...</div>
        <div id="calendar"></div>
    </div>
</div>

<div class="modal" id="modalProgramacion">
    <div class="modal__content">
        <div class="flex items-center px-5 py-5 sm:py-3 border-b border-gray-200">
            <h2 class="font-medium text-base mr-auto">Broadcast Message</h2> <button class="button border items-center text-gray-700 hidden sm:flex"> <i data-feather="file" class="w-4 h-4 mr-2"></i> Download Docs </button>
            <div class="dropdown relative sm:hidden">
                <a class="dropdown-toggle w-5 h-5 block" href="javascript:;"> <i data-feather="more-horizontal" class="w-5 h-5 text-gray-700"></i> </a>
                <div class="dropdown-box mt-5 absolute w-40 top-0 right-0 z-20">
                    <div class="dropdown-box__content box p-2"> <a href="javascript:;" class="flex items-center p-2 transition duration-300 ease-in-out bg-white hover:bg-gray-200 rounded-md"> <i data-feather="file" class="w-4 h-4 mr-2"></i> Programar Cursos </a> </div>
                </div>
            </div>
        </div>
        <div class="p-5">
            <form id="formularioProgrmacion">
                <div class="row">
                    <div class="col-span-6">
                        <div class="form-group">
                            <label>Fecha</label>
                            <input class="input w-full border" readonly type="text" asp-for="Fecha" id="Fecha" />
                        </div>
                    </div>
                    <div class="col-span-12 row">
                        <div class="form-group col-span-6">
                            <label>Hora Inicio</label>
                            <input class="input w-full border mt-2 flex-1" type="time" asp-for="HoraInicio" />
                        </div>
                        <div class="form-group col-span-6">
                            <label>Hora Final</label>
                            <input class="input w-full border mt-2 flex-1" type="time" asp-for="HoraFinal" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-span-6">
                        <div class="form-group">
                            <label>Curso</label>
                            <select class="input w-full border mt-2 flex-1" asp-for="CursoId">
                                <option>Seleccione</option>
                                @foreach (Curso item in (List<Curso>)ViewData["Curso"])
                                {
                                    <option value="@item.CursoId">@item.NombreCurso</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-span-6">
                        <div class="form-group">
                            <label>Descripción</label>
                            <textarea class="input w-full border mt-2 flex-1" asp-for="Descripcion"></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="px-5 py-3 text-right border-t border-gray-200">
            <button type="button" class="button w-20 border text-gray-700 mr-1">Cerrar</button>
            <button type="button" class="button w-20 bg-theme-1 text-white" onclick="guardar()">Guardar</button>
        </div>
    </div>
</div>


@section Style {
    <link href="~/lib/fullcalendar/main.css" rel="stylesheet" />
    <style>
        #loading {
            display: none;
            position: absolute;
            top: 10px;
            right: 10px;
        }

        #calendar {
            max-width: 1100px;
            margin: 40px auto;
            padding: 0 10px;
        }
    </style>
}

@section Scripts {
    <script src="https://momentjs.com/downloads/moment.min.js"></script>
    <script src="~/lib/fullcalendar/main.js"></script>
    <script src="~/lib/fullcalendar/locales/es.js"></script>
    <script src="~/js/App.js"></script>
    <script>
        $(function () {
            calendario();
            listar();
        })
    </script>

}